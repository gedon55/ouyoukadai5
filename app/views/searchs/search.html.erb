
<% if @model == 'user' %>
  <h3>Books search for"<%= @content %>"</h3>
  
  
  <table class='table table-hover'>
        <tr>
            <th></th>
            <th></th>
            <th>Title</th>
            <th></th>
            <th>Opinion</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    <% @records.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size:'50x50' %></td>
        <td></td>
        <td><%= link_to user.name,user %></td>
        <td></td>
        <td><%= user.introduction %></td>
    <% end %>
      </tr>
    
</table>



<% else @model == 'books' %>
  <h3>Books search for"<%= @content %>"</h3>
  
  
  <table class='table table-hover'>
        <tr>
            <th></th>
            <th></th>
            <th>Title</th>
            <th></th>
            <th>Opinion</th>
            <th></th>
            <th></th>
        </tr>

    <% @records.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image, size:'50x50' %></td>
        <td></td>
        <td><%= link_to book.title,book %></td>
        <td></td>
        <td><%= book.body %></td>
    <% end %>
      </tr>
    
<% end %>
</table>
